<div class="container-fluid text-center">
  <div class="row align-items-center">

    <div class="col-6">
      <h1>Bienvenido {{user}}, ha ingresado como administrador</h1>
    </div>

    <div class="col-6 d-flex justify-content-end">
      <button
        class="btn btn-danger btn-sm"
        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: 1.15rem;"
        onclick="window.location.href='/admin/login/logout'"
      >Cerrar sesi√≥n
        <i class="fa-solid fa-right-from-bracket"></i>
      </button>
    </div>

  </div>
</div>

<div class="container-xl">
  <div class="row align-items-center">
    <div class="col-8 d-flex justify-content-start">
      <h2>Listado de novedades</h2>
    </div>
    <div class="col-4 d-flex justify-content-end">
      <button
        class="btn btn-success"
        onclick="window.location.href='/admin/novedades/agregar'"
      ><i class="fa-solid fa-plus"></i>
        Agregar</button>
    </div>
  </div>
  <div class="row">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Titulo</th>
          <th scope="col">Cuerpo</th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        {{#each novedades}}
          <tr>
            <th class="align-middle" scope="row">{{id}}</th>
            <td class="align-middle">{{titulo}}</td>
            <td class="align-middle">{{cuerpo}}</td>
            <td class="text-end align-middle">
              <button><i class="fa-solid fa-pen"></i></button>
              <button><i class="fa-solid fa-trash-can"></i></button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>